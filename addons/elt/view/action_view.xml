<!-- elt.action -->
<!-- elt.action -->
<!-- elt.action -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_elt_action_filter" model="ir.ui.view">
            <field name="name">elt.action.select</field>
            <field name="model">elt.action</field>
            <field name="arch" type="xml">
                <search string="action" version="7.0">
                    <group string="By Attribute">
                    <field name="blocked" string="Blocked"
                            />
                    <field name="sequence" string="Sequence"
                            />
                    <field name="state" string="State"
                            />
                    <field name="name" string="Name"
                            />
                    <field name="source_domain" string="Source Domain"
                            />
                    </group>
                    <group string="By object">
                    <field name="manager_id" string="Manager"
                            />
                    <field name="source_model_id" string="Source Model"
                            />
                    <field name="target_model_id" string="Target Model"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_elt_action_form" model="ir.ui.view">
            <field name="name">elt.action.form</field>
            <field name="model">elt.action</field>
            <field name="arch" type="xml">
                <form string="action" version="7.0">
                    <header>
                    </header>
                    <sheet string="action">
                     <group>
                        <field name="blocked"
                            />
                        <field name="sequence"
                            />
                        <field name="state"
                            />
                        <field name="name"
                            />
                        <field name="source_domain"
                            />
                        <field name="log"
                            />
                        <field name="note"
                            />
                        <field name="repeating_action"
                            />
                        <field name="source_id_exp"
                            />
                        <field name="target_id_exp"
                            />
                        <field name="from_rec_id"
                            />
                        <field name="to_rec_id"
                            />
                    <field name="field_mapping_ids"
                            context="{'default_target_model_id':target_model_id, 'default_source_model_id':source_model_id}"
                            />
                    <field name="source_model_id"
                            />
                    <field name="target_model_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_elt_action_tree" model="ir.ui.view">
            <field name="name">elt.action.tree</field>
            <field name="model">elt.action</field>
            <field name="arch" type="xml">
                <tree string="action"
                    colors="grey:state == 'disabled';green:state == 'enabled';blue:state == 'to_analyze'"
                    >
                    <field name="blocked"
                        />
                    <field name="sequence"
                            widget="handle"
                        />
                    <field name="state"
                        />
                    <field name="name"
                        />
                    <field name="source_model_id"
                        />
                    <field name="target_model_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
