<!-- oerp_migrator.external_model -->
<!-- oerp_migrator.external_model -->
<!-- oerp_migrator.external_model -->
<openerp>
    <data>


        <!-- FORMVIEW -->
        <record id="view_oerp_migrator_external_model_form" model="ir.ui.view">
            <field name="name">oerp_migrator.external_model.form</field>
            <field name="model">oerp_migrator.external_model</field>
            <field name="inherit_id" ref="oerp_migrator.view_oerp_migrator_external_model_form"/>
            <field name="arch" type="xml">
                 <header>
                    <!-- No tiene sentido ordenar un solo modelo, tiene que ser una lista de modelos -->
                    <button type="object" name="read_fields_button" string="Read Fields"/>
                    <button type="object" name="read_records" string="Read Records"/>
                </header>
                <field name="field_ids" position="replace"/>
                <field name="external_model_record_ids" position="replace">
                    <notebook colspan="2">
                        <page string="Fields">
                            <field name="field_ids"/>
                        </page>
                        <page string="Records">
                            <group>
                                <field name="fields_to_read"/>
                                <field name="external_model_record_ids"/>
                            </group>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>


    </data>
</openerp>
