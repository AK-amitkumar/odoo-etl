        <record id="view_elt_value_mapping_field_detail_filter" model="ir.ui.view">
            <field name="name">elt.value_mapping_field_detail.select</field>
            <field name="model">elt.value_mapping_field_detail</field>
            <field name="inherit_id" ref="elt.view_elt_value_mapping_field_detail_filter"/>
            <field name="arch" type="xml">
                <group string="By Attribute">
                    <field name="source_name"  filter_domain="['|',('source_external_model_record_id.name','ilike',self),('source_external_model_record_id.ext_id','ilike',self)]" string="Source..."/>
                    <!-- <field name="source_name"  string="Source...22222"/> -->
                    <filter name="to_map" string="To Map" domain="[('target_external_model_record_id','=',False)]"/>
                </group>
            </field>
        </record>

        <record id="elt.action_elt_value_mapping_field_detail_values_mapping" model="ir.actions.act_window">
