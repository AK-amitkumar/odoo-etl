<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_oerp_migrator_field_filter" model="ir.ui.view">
            <field name="name">oerp_migrator.field.select</field>
            <field name="model">oerp_migrator.field</field>
            <field name="arch" type="xml">
                <search string="field" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    <field name="field_description" string="Field Description"
                            />
                    <field name="relation" string="Relation"
                            />
                    <field name="relation_field" string="Relation Field"
                            />
                    <field name="ttype" string="Type"
                            />
                    <field name="required" string="Required"
                            />
                    <field name="function" string="Function"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_oerp_migrator_field_form" model="ir.ui.view">
            <field name="name">oerp_migrator.field.form</field>
            <field name="model">oerp_migrator.field</field>
            <field name="arch" type="xml">
                <form string="field" version="7.0">
                    <header>
                    </header>
                    <sheet string="field">
                     <group>
                        <field name="name"
                            />
                        <field name="field_description"
                            />
                        <field name="relation"
                            />
                        <field name="relation_field"
                            />
                        <field name="ttype"
                            />
                        <field name="required"
                            />
                        <field name="function"
                            />
                    <field name="model_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_oerp_migrator_field_tree" model="ir.ui.view">
            <field name="name">oerp_migrator.field.tree</field>
            <field name="model">oerp_migrator.field</field>
            <field name="arch" type="xml">
                <tree string="field"
                    >
                    <field name="name"
                        />
                    <field name="field_description"
                        />
                    <field name="relation"
                        />
                    <field name="ttype"
                        />
                    <field name="model_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
