<!-- oerp_migrator.value_mapping_field -->
<!-- oerp_migrator.value_mapping_field -->
<!-- oerp_migrator.value_mapping_field -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_oerp_migrator_value_mapping_field_filter" model="ir.ui.view">
            <field name="name">oerp_migrator.value_mapping_field.select</field>
            <field name="model">oerp_migrator.value_mapping_field</field>
            <field name="arch" type="xml">
                <search string="value_mapping_field" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Field Name"
                            />
                    <field name="type" string="Type"
                            />
                    </group>
                    <group string="By object">
                    <field name="manager_id" string="manager_id"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_oerp_migrator_value_mapping_field_form" model="ir.ui.view">
            <field name="name">oerp_migrator.value_mapping_field.form</field>
            <field name="model">oerp_migrator.value_mapping_field</field>
            <field name="arch" type="xml">
                <form string="value_mapping_field" version="7.0">
                    <header>
                    </header>
                    <sheet string="value_mapping_field">
                     <group>
                        <field name="name"
                            />
                        <field name="type"
                            />
                        <field name="source_model_id"
                            domain="[('type','=','source'),('manager_id','=',manager_id)]"
                            attrs="{'invisible':[('type','!=','id')],'required':[('type','=','id')]}"
                            />
                        <field name="target_model_id"
                            domain="[('type','=','target'),('manager_id','=',manager_id)]"
                            attrs="{'invisible':[('type','!=','id')],'required':[('type','=','id')]}"
                            />
                    <field name="value_mapping_field_detail_ids"
                            context="{'default_target_model_id':target_model_id,'default_source_model_id':source_model_id,'default_value_mapping_field_id':active_id,'type':type}"
                            />
                    <field name="value_mapping_field_value_ids"
                            attrs="{'invisible':[('type','=','id')]}"
                            />
                    <field name="manager_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_oerp_migrator_value_mapping_field_tree" model="ir.ui.view">
            <field name="name">oerp_migrator.value_mapping_field.tree</field>
            <field name="model">oerp_migrator.value_mapping_field</field>
            <field name="arch" type="xml">
                <tree string="value_mapping_field"
                    >
                    <field name="name"
                        />
                    <field name="type"
                        />
                    <field name="manager_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
